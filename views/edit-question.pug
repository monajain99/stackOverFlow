extends layout.pug

include utils.pug

append head
  script(src="/javascripts/demo.js" type="module" async defer)
  link(rel="stylesheet" href="/stylesheets/new-question.css")

block content
    include top-nav
    include side-nav
    div.main
        div.form-container
            h2.form-title Edit Question
            //- h1.form-container__header Register
            div.form-container__elements
                +validationErrorSummary(errors)
                form(action=`/questions/${question.id}` method='post')
                    input(required type='hidden' name='_csrf' value=csrfToken)
                    +field('title', question.title, 'Title')
                    textarea.form-elements__content__input(placeholder="Content" required name="content" maxlength=255)=question.content
                    div.form-container-elements__actions-container
                        button.form-container-elements__button(type='submit') Submit
                        a.form-container-elements__cancel(href='/') Cancel
